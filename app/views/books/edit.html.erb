<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
  <p><%= link_to 'Show', book_path(@book.id) %>|<%= link_to "Back", books_path %></p>
<% end %>
